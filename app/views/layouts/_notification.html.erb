<% if notice%>
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <p class="notice"><%= notice %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

